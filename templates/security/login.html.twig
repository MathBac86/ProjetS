{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <div class="login">
        <div id="connect">
            <form method="post">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-center">
                        <span style="color: whitesmoke;">{{ app.user.username }}, vous êtes déjà connecté </span><br>
                        <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                        <a class="btn btn-success" href="{{ path('home') }}">Accueil</a>
                    </div>
                {% endif %}

               
                <div class="form__group field mb-3">
                    <input type="email" class="form__field" placeholder="Votre mail" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus/>
                    <label for="username" class="form__label">Email</label>
                </div>

                <div class="form__group field mb-3">
                    <input type="password" class="form__field" placeholder="Votre mot de passe" name="_password" id="password" autocomplete="current-password" required/>
                    <label for="password" class="form__label">Mot de passe</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="text-center checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me" class="ms-1">Se souvenir de moi</label>
                </div>
            
                <div class="text-center mt-2 mb-3">
                    <a href="{{ path('app_register') }}" class="btn btn-primary col-5" >Inscription</a>

                    <button class="btn btn-success col-6" type="submit">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
